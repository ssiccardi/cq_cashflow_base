<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_invoice_data_validazione_form" model="ir.ui.view">
            <field name="name">view.invoice.data.validazione.form.</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="date_invoice" position="after">
                  <field name="data_validazione" />
                </field>
            </field>
        </record>


        <record id="view_supplier_invoice_data_validazione_form" model="ir.ui.view">
            <field name="name">view.supplier.invoice.data.validazione.form.</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="date_due" position="after">
                  <field name="data_validazione" />
                </field>
            </field>
        </record>


    </data>
</openerp>
